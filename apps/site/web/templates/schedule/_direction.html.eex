<div class="btn-group direction-btn-group" role="group">
  <%= for direction_id <- [1, 0] do %>
    <% button_class = if direction_id == @direction_id do
        "btn-primary"
        else
        "btn-primary-outline"
        end
    %>
    <%= link to: update_url(@conn, reverse_direction_opts(@origin, @destination, @route.id, direction_id)), class: "btn btn-sm #{button_class} direction-btn" do %>
      <%= if direction_id == @direction_id do %>
        <%= fa "check" %><span class="sr-only">Current direction: </span>
      <% end %>
      <%= direction(direction_id, @route.id) %><%= if @headsigns[direction_id] != [] do %> to:<br>
      <strong>
        <%= @headsigns[direction_id] |> Enum.join(", ") |> clean_route_name %>
      </strong>
      <% end %>
    <% end %>
  <% end %>
</div>
