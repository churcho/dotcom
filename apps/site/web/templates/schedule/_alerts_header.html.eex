<div class="row">
  <div class="col-xs-12">
    <%= if @conn.assigns[:route] do %>
      <div class="p-a-1">
        <strong>
          <%= render "_mode_image.html", forward_assigns(@conn) %>
          <%= @route.name %>: Service Alerts & Notices</strong>
        </strong>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="t-alerts-container">
      <hr>
      <a href="<%= redirect_path @conn, "rider_tools/t_alerts/"  %>">
          Sign up for T-Alerts <%= fa "mobile" %> <%= fa "envelope" %>
        <%= fa "angle-right fa-pull-right" %>
      </a>
      <hr>
    </div>
  </div>
</div>
