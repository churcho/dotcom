<ul class="list-group list-group-flush index-news-group">
  <%= for post <- @news do %>
    <li class="list-group-item list-group-item-flush index-news-item">
      <a href="<%= redirect_path @conn, "about_the_mbta/news_events/?id=#{post.id}" %>"><%= post.attributes["title"]
                                                                                            |> News.Blurb.blurb
                                                                                            |> raw %></a>
    </li>
  <% end %>
  <li class="list-group-item list-group-item-flush index-news-item">
    <a href="<%= redirect_path @conn, "about_the_mbta/news_events/" %>">
      View more &raquo;
    </a>
  </li>
</ul>
