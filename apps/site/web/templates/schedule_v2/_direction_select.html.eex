<% headsigns = @headsigns[@direction_id] |> Enum.map(&break_text_at_slash/1) |> Enum.join(" â€¢ ") %>
<div class="direction-filter col-xs-12 col-sm-6 col-md-<%= if String.length(headsigns) > 20, do: "8", else: "4" %>">
  <div class="filter-label">
    Direction of your trip:
    <%= render "_help_tooltip.html", text: direction_tooltip(@route.type) %>
  </div>
  <%= link to: update_url(@conn, reverse_direction_opts(@origin, @destination, 1 - @direction_id)) <> "#direction-filter", id: "direction-filter", class: "filter-button" do %>
    <div class="filter-text">
      <span class="sr-only">Change Direction of Trip.</span>
      <div class="inner-label">
        <%= direction(@direction_id, @route) %> to&#58;
      </div>
      <div>
        <%= fa "arrow-right" %>
        <%= headsigns %>
      </div>
    </div>
    <div class="filter-icon">
      <div class="filter-icon-border"><%= fa "exchange" %></div>
    </div>
  <% end %>
</div>
