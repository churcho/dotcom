<div class="schedule-trip-stop<%= if @terminus? do %> terminus<% end %><%= if @vehicle? do %> vehicle<% end %>">
  <div class="vehicle-location">
    <%= stop_bubble_location_display(@vehicle?, @route, @terminus?) %>
  </div>
  <div class="stop-info">
    <span class="stop-info-column">
      <%= link @name, to: @href %>
      <%= display_alerts(@alerts)%>
    </span>
    <span class="stop-info-column">
      <%= if @route.type == 2 do %>
        <%= display_commuter_scheduled_prediction(@predicted_schedule) %>
      <% else %>
        <%= display_scheduled_prediction(@predicted_schedule) %>
      <% end %>
    </span>
  </div>
</div>
