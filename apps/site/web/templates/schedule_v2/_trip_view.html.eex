<% hide_trip_info? = @trip_info == nil %>
<%= render "_stop_filters.html", forward_assigns(@conn) %>
<%= if @origin do %>
  <div class="trip-view-main">
    <%= unless hide_trip_info?, do: render "_trip_info.html", forward_assigns(@conn) %>
    <%= if @route.type == 2 do %>
      <%= render "_commuter_trip_list.html", forward_assigns(@conn) %>
    <% else %>
      <%= render "_trip_list.html", forward_assigns(@conn) %>
    <% end %>
  </div>
<% end %>
