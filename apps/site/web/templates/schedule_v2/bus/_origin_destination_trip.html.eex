<div class="row schedule-v2">
  <div class="col-xs-6 schedule-list-group">
    <div class="schedule-list-group-item schedule-list-group-header">
      <div class="col-xs-6">Departure</div>
      <div class="col-xs-6">Arrival</div>
    </div>
    <%= for {schedule, destination, departure_prediction, arrival_prediction} <- group_trips(@schedules, @predictions, @destination_predictions) do %>
      <a class="schedule-list-group-item" <%# href="TODO" %>>
        <div class="col-xs-6">
          <%= display_time(schedule, departure_prediction) %>
        </div>
        <div class="col-xs-6">
          <%= display_time(destination, arrival_prediction)%>
        </div>
      </a>
    <% end %>
    <% # TODO: Add expanded list link %>
  </div>
</div>
