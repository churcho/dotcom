<div class="color-group">
  <h2><%= @section %></h2>
  <div>
    <%= for {name, val} <- @values do %>
      <div class="color">
        <div class="color-box" style="background: <%= get_color_value(val) %>"></div>
        <h3><%= name %></h3>
        <p><%= val %></p>
      </div>
    <% end %>
  </div>
</div>
