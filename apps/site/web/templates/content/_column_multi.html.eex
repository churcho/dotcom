<div class="title-card-container title-card-container-separate">
  <h2><%= ContentRewriter.rewrite(@paragraph.header) %></h2>
  <%= for columns <- Enum.chunk(@paragraph.columns, 2, 2, []) do %>
    <div class="row">
      <%= for column <- columns do %>
        <div class="col-md-6 col-sm-12">
            <div class="title-card title-card-link-type">
              <%= render "_column.html", columns: column %>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
