<div class="fares-tab-group row">
  <%= for reduced_type <- ~w(adult student senior_disabled)a do %>
    <a class="fares-tab p-a-1 col-md-3 col-xs-12 <%=if @fare_type == reduced_type, do: "fares-tab-selected" %>" href="<%= @conn.request_path %>?<%= @conn |> update_query(fare_type: reduced_type) |> URI.encode_query %>">
      <%= display_fare_type(reduced_type) %>
    </a>
  <% end %>
</div>
<%= render "_fare_info.html", fares: filter_reduced(@fares, @fare_type), conn: @conn %>
