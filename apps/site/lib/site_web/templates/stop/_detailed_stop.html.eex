<a class="btn button stop-btn m-detailed-stop" href="<%= stop_path(@conn, :show, @detailed_stop.stop.id) %>" data-name="<%= @detailed_stop.stop.name %>">
  <div class="m-detailed-stop__name js-stop__name"><%= @detailed_stop.stop.name %></div>
  <div class="stop-features-list m-detailed-stop__features">
    <%= if assigns[:include_route_icon?], do: stop_feature_icon(@detailed_stop.route_icon, "icon-small") %>
    <%= feature_icons(@detailed_stop)%>
  </div>
  <div class="m-detailed-stop__zone">
    <%= if @detailed_stop.zone do %>
      <span class="commuter-rail-zone">Zone <%= @detailed_stop.zone %></span>
    <% end %>
  </div>
</a>
