<%= if !Enum.empty?(@news) do %>
  <div class="container page-section m-homepage__news" id="news-and-updates">
    <div class="m-homepage--10-col-sm-only">
      <h2>News</h2>
      <%= render_news_entries(@conn) %>
      <p>
        <%= link "More News", to: news_entry_path(@conn, :index), class: "c-call-to-action" %>
      </p>
      <p>
        <%= link "See Upcoming Events", to: event_path(@conn, :index), class: "c-call-to-action" %>
      </p>
    </div>
  </div>
<% end %>
