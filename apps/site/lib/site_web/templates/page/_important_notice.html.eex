<div class="row important-whats-happening page-section">
  <div class="important-whats-happening-image hidden-sm-down col-md-8">
    <%= tag :img, src: @important_notice.thumb.url, alt: @important_notice.thumb.alt, class: "img-fluid" %>
  </div>
  <div class="important-whats-happening-text col-md-4 col-xs-12">
    <%= @important_notice.blurb %>
    <%= link to: cms_static_page_path(@conn, (@important_notice.link && @important_notice.link.url)) || "#" do %>
      <span class="no-wrap">More <%= fa "arrow-right"%></span>
    <% end %>
  </div>
</div>
