<div id="<%= @prefix %>-search__container" class="c-form__input-container">
  <label for="query" class="sr-only"><%= @aria_label %></label>
  <input type="text" name="query" id="<%= @prefix %>-search__input" class="c-form__input js-form__input" placeholder="<%= @placeholder %>">
  <i aria-hidden="true" id="<%= @prefix %>-search__loading-indicator" class="fa fa-cog fa-spin c-search-bar__loading-indicator"></i>
  <i id="<%= @prefix %>-search__reset" class="c-form__reset-icon fa fa-times-circle"></i>
  <button id="<%= @prefix %>-search__input-go-btn" class="c-form__submit-btn" aria-label="search">
    <%= svg("icon-search-reverse-default.svg") %>
  </button>
</div>
