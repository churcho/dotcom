<div class="page-section">
  <div class="row">
    <div class="col-xs-12 col-lg-3">
      <%= SiteWeb.PartialView.alert_time_filters(@alerts_timeframe, [
        method: :stop_v1_path,
        item: @stop,
        params: [tab: "alerts"]
      ]) %>
    </div>
    <div class="col-xs-12 col-lg-8 col-lg-offset-1">
      <h2 class="h2">Alerts</h2>
      <%= render_alerts(@alerts, @date, @stop, show_empty?: true, timeframe: @alerts_timeframe) %>
    </div>
  </div>
</div>
