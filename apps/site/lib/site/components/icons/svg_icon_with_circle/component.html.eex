<% icon = Site.Components.Icons.SvgIcon.get_icon_atom(args.icon) %>
<% data_toggle = if args.show_tooltip?, do: "data-toggle=tooltip", else: "" %>
<% title = if args.show_tooltip?, do: title(icon), else: "" %>
<% hyphenated_class = "icon-#{CSSHelpers.atom_to_class(icon)}" %>
<svg width="30" height="30" aria-hidden="<%= args.aria_hidden? %>" class="icon icon-with-circle <%= hyphenated_class %> <%= args.class %>" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewbox="<%= circle_viewbox(icon) %>" <%= data_toggle %> title="<%= title %>" preserveAspectRatio="xMidYMid meet">
  <circle fill="#fff" stroke="#000" stroke-width="1" <%= circle_args(icon) %> class="icon-circle <%= hyphenated_class %>-circle" transform="translate(1,1)"></circle>
  <g fill-rule="evenodd" class="icon-image <%= hyphenated_class %>-image" transform="translate(<%= translate(icon) %>) scale(<%= scale(icon) %>)<%= rotate(icon) %>">
    <%= Site.Components.Icons.SvgIcon.get_path(icon) %>
  </g>
</svg>
