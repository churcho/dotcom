{
  "scripts": {
    "lint": "pronto run",
    "ci-install": "cd apps/site/assets && npm ci --no-optional",
    "install": "cd apps/site/assets && npm install --no-optional",
    "test": "mix test && npm run test:js && mix backstop.tests",
    "backstop:test": "apps/site/assets/node_modules/.bin/backstop test --config=apps/site/test/backstop.json",
    "backstop:reference": "apps/site/assets/node_modules/.bin/backstop reference --config=apps/site/test/backstop.json",
    "test:js": "cd apps/site/assets && npm run test",
    "brunch:build:namespaced": "cd apps/site/assets && node_modules/brunch/bin/brunch b -c brunch-config-namespaced.js",
    "brunch:build": "cd apps/site/assets && node_modules/brunch/bin/brunch b -p",
    "brunch:watch": "cd apps/site/assets && node_modules/brunch/bin/brunch w",
    "server:mocked": "MIX_ENV=prod PORT=8082 STATIC_SCHEME=http STATIC_HOST=localhost STATIC_PORT=8082 V3_URL=http://localhost:8080 DRUPAL_ROOT=http://www.cms.example mix do deps.compile --force, compile --no-deps-check --force, phx.server",
    "server:mocked:nocompile": "MIX_ENV=prod PORT=8082 STATIC_SCHEME=http STATIC_HOST=localhost STATIC_PORT=8082 V3_URL=http://localhost:8080 DRUPAL_ROOT=http://www.cms.example mix phx.server",
    "wiremock": "cd apps/site && java -jar ${WIREMOCK_PATH:-../../bin/wiremock-standalone-2.14.0.jar} --root-dir=test",
    "wiremock:record": "npm run wiremock -- --proxy-all=\"https://dev.api.mbtace.com\" --record-mappings",
    "wiremock:record:clean": "rm -fr apps/site/test/{__files,mappings} && npm run wiremock:record",
    "routes": "cd apps/site && mix phx.routes && cd ../..",
    "dialyzer": "mix dialyzer --halt-exit-status"
  }
}
